<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutParentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonToFinancingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Buy"
        android:background="@color/material_on_background_emphasis_medium"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToLeasingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Lease"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/buttonToFinancingActivity"
        app:layout_constraintStart_toStartOf="@+id/buttonToFinancingActivity"
        app:layout_constraintTop_toBottomOf="@+id/buttonToFinancingActivity" />

    <Button
        android:id="@+id/buttonToSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Settings"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/buttonToLeasingActivity"
        app:layout_constraintStart_toStartOf="@+id/buttonToLeasingActivity"
        app:layout_constraintTop_toBottomOf="@+id/buttonToLeasingActivity" />

    <TextView
        android:id="@+id/textDesignedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Designed by S2ci Labs"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>